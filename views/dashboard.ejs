<div>
  <div class="container" >
    <a class="display-4" style="font-size: 20px;">Laufende Challenges (2/5) </a>
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>
            <span> 
            Name der Challenge
            </span>
          </th>
          <th>Ziel [Tage]</th>
          <th>Läuft seit</th>
          <th>Läuft bis</th>
          <th>Zur Challenge</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < result.current.length;  i++) { %>
        <tr>
          <td><%= result.current[i].challengeName %></td>
          <td><%= result.current[i].goal %></td>
          <td><%= result.current[i].startDate %></td>
          <td><%= result.current[i].endDate %></td>
          <!-- button submits the specific id of challenge i, so when clicked a redirection goes to the challenge-view and load the specific data of challenge i -->
          <td><button type="submit" class="btn btn-dark" style="background-color:var(--decent-green);">Zur Challenge</button></td>
        </tr>    
        <% } %>
      </tbody>
    </table>

    <!-- <div class="divider"></div> -->
  </div>
      
  <div class="container">
    <a class="display-4" style="font-size: 20px;">Vergangene Challenges (1)</a>
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>
            <span> 
            Name der Challenge
            </span>
          </th>
          <th>Ziel [Tage]</th>
          <th>Lief von</th>
          <th>Lief bis</th>
          <th>Zur Challenge</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < result.past.length;  i++) { %>
        <tr>
          <td><%= result.past[i].challengeName %></td>
          <td><%= result.past[i].goal %></td>
          <td><%= result.past[i].startDate %></td>
          <td><%= result.past[i].endDate %></td>
          <!-- button submits the specific id of challenge i, so when clicked a redirection goes to the challenge-view and load the specific data of challenge i -->
          <td><button type="submit" class="btn btn-dark" style="background-color:var(--decent-green);">Zur Challenge</button></td>
        </tr>    
        <% } %>
      </tbody>
    </table>
  </div>
</div>